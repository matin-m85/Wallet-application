# ==============================
# Dockerfile for discount-service
# ==============================

# ğŸ§± Stage 1: Build Go binary
FROM docker.arvancloud.ir/golang:1.24.2 AS builder

# ğŸ“‚ Set working directory
WORKDIR /app

# ğŸ“¦ Copy go.mod & go.sum first for better caching
COPY go.mod go.sum ./
RUN go mod download

# ğŸ§© Copy the rest of the source code
COPY . .

# âš™ï¸ Build static binary compatible with Alpine
ENV CGO_ENABLED=0 GOOS=linux GOARCH=amd64
RUN go build -o discount-service ./cmd/main.go

# ğŸš€ Stage 2: Create lightweight runtime image
FROM docker.arvancloud.ir/alpine:latest

WORKDIR /app

# ğŸ“¥ Copy binary from builder
COPY --from=builder /app/discount-service .

# âœ… Make it executable
RUN chmod +x /app/discount-service

# ğŸŒ Expose service port
EXPOSE 8080

# ğŸ Start service
CMD ["./discount-service"]
